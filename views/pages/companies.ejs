<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
    <link rel="stylesheet" href="/stylesheets/companies.css">
    <title>Companies</title>
</head>

<body>

    <%- include('../partials/header', {title: "Companies"}) -%>

    <button type="button" class="btn btn-primary" id="addNewCompanyButton" data-toggle="modal" data-target="#addNewCompanyModal"
        data-whatever="@mdo">+</button>


    <div class="modal fade" id="addNewCompanyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Company</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="companyName" class="col-form-label">Name:</label>
                            <input type="text" class="form-control" id="companyName" placeholder="Example: Nasa">
                        </div>
                        <div class="form-group">
                            <label for="companyPhoneNumber" class="col-form-label">Phone Number:</label>
                            <input type="text" class="form-control" id="companyPhoneNumber" placeholder="Example: 0213266818">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <%- include('../partials/dangerAlert') -%>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="addCompany">Add Company</button>
                </div>
            </div>
        </div>
    </div>


    <table class="table table-striped table-dark  col-md-6 offset-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone number</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>

            <% for (let i = 0, len = companies.length; i < len; i++) { %>
                <tr elementId="<%= companies[i]._id %>" index="<%= i %>">
                    <td><%= i + 1 %></td>
                    <td><%= companies[i].name %></td>
                    <td><%= companies[i].phoneNumber %></td>
                    <td>
                        <span class="material-icons text-danger" onclick="deleteRow(this)">
                            delete_forever
                        </span>
                        <span class="material-icons text-warning" onclick="makeRowEditable(this)">
                            create
                        </span>
                        <a href="http://localhost:3000/api/product/<%= companies[i]._id %>">
                            <span class="material-icons text-success">
                                read_more
                            </span>
                        </a>
                    </td>
                </tr>
            <% } %>
        </tbody>
      </table>

      <br><br><br><br><br><br>






    <%- include('../partials/dangerAlert') -%>

    <%- include('../partials/successAlert') -%>


    <%- include('../partials/footer') -%>

    <%- include('../partials/jsSrcs') -%>
    <script src="/javascripts/companies.js"></script>
</body>

</html>